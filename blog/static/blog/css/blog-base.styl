@import 'animations'

$slideSize = 10px
$primaryColor = hsl(204, 86%,  80%)

.justify-left
  justify-content:left

.is-one-quarter.break-tablet
  @media(max-width:1024px) and (min-width: 769px)
    width:33.333%

.pulse-in
  opacity: 0.0
  &.activate
    animation: pulseIn 6s forwards

.anim-spook
  transform: rotate(0deg)
  &.spook
    animation: spooky 1.5s forwards

.inline-icon-spacing
  .icon
    margin-right:1rem

#home-link
  position:relative
  left:-200px
  animation: arrive 2s forwards
  &.move
    animation: move 4s

.entry
  &.box
    padding-top:.75rem
  .entry-type
    margin-bottom:.5rem
  .image.is-square
    overflow:hidden
    img
      min-width: 100%
      max-width: none
      width:auto
      max-height:none
    &.portrait
      img
        width:100%
        height:auto
        margin:auto
