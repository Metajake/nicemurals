@import 'animations'

$slideSize = 10px
$primaryColor = hsl(204, 86%,  80%)

.justify-left
  justify-content:left

.is-one-quarter.break-tablet
  @media(max-width:1024px) and (min-width: 769px)
    width:33.333%

.pulse-in
  opacity: 0.0
  &.activate
    animation: pulseIn 6s forwards

.anim-spook
  transform: rotate(0deg)
  &.spook
    animation: spooky 1.5s forwards

.inline-icon-spacing
  .icon
    margin-right:1rem

#home-link
  position:relative
  left:-200px
  animation: arrive 2s forwards
  &.move
    animation: move 4s

.entry
  .card-image
    .figure.image.is-square
      overflow:hidden
      img
        margin:auto auto
        min-height:100%
        height:auto
        width:auto
        max-width:none
      &.is-horiz
        img
          max-height: 100%
      &.is-vert
        img
          max-width:100%
