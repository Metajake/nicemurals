.justify-left
  justify-content:left

.is-one-quarter.break-tablet
  @media(max-width:1024px) and (min-width: 769px)
    width:33.333%

.will-pulse-in
  opacity: 0.0
  &.activate
    animation: pulseIn 6s forwards

.inline-icon-container
  .icon
    margin-right:1rem

#home-link
  position:relative
  left:-200px
  animation: arrive 2s forwards
  &.move
    animation: move 4s

$slideSize = 10px
$primaryColor = hsl(204, 86%,  80%)

.slide-container
  width:100%
  .slider
    -webkit-appearance: none
    appearance: none
    width: 100%
    height: 3px
    background: #b3b3b3
    outline: none
    opacity: 0.6
    -webkit-transition: .2s
    transition: opacity .2s
    &:hover
      opacity: 1
    &::-webkit-slider-thumb
      -webkit-apperance: none
      appearance: none
      width: $slideSize
      height: $slideSize
      background: $primaryColor
      cursor: pointer
    &::-moz-range-thumb
      width: $slideSize
      height: $slideSize
      background: $primaryColor
      cursor: pointer

@keyframes arrive
  0%
    left:-200px
  100%
    left:0px

@keyframes move
  0%
    left:0px
  100%
    left:1000px

@keyframes pulseIn
  0%
    opacity:0.0
  25%
    opacity:0.85
  100%
    opacity:0.0
