|{% if config.entry_sorting == 'columns'%}
.columns.is-multiline
  | {% for entry in entries reversed %}
  .column.is-one-third
    a(href="/entry/{{entry.slug}}")
      .card
        |{% for work in entry.images.all %}{% if forloop.first %}
        .card-image
          .figure.image.is-4by3
            img(src="{{ work.image.url }}")
        |{% endif %}{% endfor %}
        .card-content
          .content
            h3.title.is-4 {{entry.title}} 
            h4.subtitle.is-6 {{entry.richbody | safe | truncatewords:7}}
        footer.card-footer
          .card-footer-item.justify-left
            p {{entry.created}}
          
  | {% endfor %}
|{% elif config.entry_sorting == 'tiles' %}
.tile.is-ancestor.is-vertical
  |{% for entry in entries %}
  |{% if forloop.first %}<div class="tile">{% endif %}
  .tile.is-parent
    artice.tile.is-child.box
      p {{entry.title}}
      |{% if entry.featured_image.image %}
      img(src="{{entry.featured_image.image.url}}")
      |{% endif %}
  |{% if forloop.counter|divisibleby:"2" %}</div><div class="tile">{% endif %}
  
  |{% if forloop.last %}</div>{% endif %}
  |{% endfor %}
|{% endif %}
