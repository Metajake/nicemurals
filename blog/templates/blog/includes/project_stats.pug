|{%load blog_extras %}

.content
  |{% if project.repository %}
  h3.is-size-4 Repository
  a(href="{{project.repository}}" target="_blank").repository.is-flex.has-items-aligned-center
    h1.icon.subtitle: i.fab.fa-github
    span.has-text-primary.is-truncated {{project.repository}}
  |{%endif%}

  |{% if project.affiliate_links %}
  h3.is-size-4 Affiliate Links
  ul.affiliate-links
    |{% for link in project.affiliate_links|split_list:"," %}
    li.is-truncated
      h5.icon.subtitle.is-inline: i.fas.fa-arrow-right
      a.has-text-primary(href="{{link}}" target="_blank") {{link}}
    |{% endfor %}
  |{%endif%}
